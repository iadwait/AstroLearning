---
const { title, content } = Astro.props;
---

<div class="card">
    <h2>{title}</h2>
    <p>{content}</p>
</div>

<style>
    .card {
        border: 1px solid black;
        padding: 16px;
        margin: 16px 0;
        border-radius: 8px;
        /* width: 30%; */
        /* text-align: center; */
    }
    .card h2 {
        margin: 0 0 8px 0;
        color: cornflowerblue;
        font-family: Arial, sans-serif;

    }
    .card p {
        margin: 0;
        font-size: 16px;
    }
</style>